<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:paddingTop="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerLabel"
        android:layout_alignStart="@+id/include_player"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/include_player"
        android:layout_above="@+id/include_player"
        android:layout_marginBottom="5dp" />

    <include
        android:layout_width="400dp"
        android:layout_height="60dp"
        layout="@layout/player_selector_button"
        android:id="@+id/include_player"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <include
        android:layout_width="400dp"
        android:layout_height="60dp"
        layout="@layout/horizontal_num_picker"
        android:layout_below="@+id/include_player"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/include_horizontal" />

</RelativeLayout>