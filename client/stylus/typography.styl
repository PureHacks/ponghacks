h1, h2
	text-align center
	

html
	font-family Bold
a 
	text-decoration none
	border-bottom none
	color inherit
	transition 0.5s ease
	border-bottom none

a:visited
	color inherit

a:hover
	color $accent-red
	border-bottom 1px solid $accent-red
	transition: 0.5 ease;

@font-face
	font-family Medium
	font-style normal
	src url("../fonts/Uniform/Medium/uniform-medium-webfont.eot")
	src url("../fonts/Uniform/Medium/uniform-medium-webfont.woff2")
	src url("../fonts/Uniform/Medium/uniform-medium-webfont.woff")
	src url("../fonts/Uniform/Medium/uniform-medium-webfont.svg")
	src url("../fonts/Uniform/Medium/uniform-medium-webfont.ttf")
	
@font-face
	font-family Regular
	font-style normal
	src url("../fonts/Uniform/Regular/uniform-regular-webfont.eot")
	src url("../fonts/Uniform/Regular/uniform-regular-webfont.woff2")
	src url("../fonts/Uniform/Regular/uniform-regular-webfont.woff")
	src url("../fonts/Uniform/Regular/uniform-regular-webfont.svg")
	src url("../fonts/Uniform/Regular/uniform-regular-webfont.ttf")
	
@font-face
	font-family Bold
	font-style normal
	src url("../fonts/Uniform/Bold/uniform-bold-webfont.eot")
	src url("../fonts/Uniform/Bold/uniform-bold-webfont.woff2")
	src url("../fonts/Uniform/Bold/uniform-bold-webfont.woff")
	src url("../fonts/Uniform/Bold/uniform-bold-webfont.svg")
	src url("../fonts/Uniform/Bold/uniform-bold-webfont.ttf")
	
@font-face
	font-family Black
	font-style normal
	src url("../fonts/Uniform/Black/uniform-black-webfont.eot")
	src url("../fonts/Uniform/Black/uniform-black-webfont.woff2")
	src url("../fonts/Uniform/Black/uniform-black-webfont.woff")
	src url("../fonts/Uniform/Black/uniform-black-webfont.svg")
	src url("../fonts/Uniform/Black/uniform-black-webfont.ttf")
	
.uppercase
	text-transform uppercase

.time-regular
	font-family Regular
	font-size 20px

.score-large
	font-family Black
	font-size 65px

.name-large
	font-family Bold
	font-size 24px
	
.section-header
	text-align left
	color $font-dark-blue
	padding 8.5px
	h3
		font-family Medium
		font-size 14px
		text-transform uppercase
		
.weekly-standings
	td:first-child, th:first-child
		text-align left
	thead
		background-color $header-bg-grey
		font-size 14px
		text-transform uppercase
		color $font-dark-blue
		th
			font-family Bold
			&:first-child
				font-family Medium
	tr
		td
			font-family Regular
			font-size 18px
			text-align center
			color $font-dark-blue
			&:first-child, &:last-child
				font-family Bold
			&:last-child
				color $accent-red

.elo-ranking
	ol li
		color $font-dark-blue
		&:before
			font-family Black
			font-size 22px
			color $font-dark-blue
		&:first-child
			color $accent-red
			&:before
				color $accent-red
		p
			font-family Medium
			font-size 20px
			text-align left

.recent-games, .game-history
	.game-info
		p
			font-family Regular
			font-size 16px
			color $font-dark-blue		
			span
				font-family Bold
				&.winner-name
					color $accent-red
		.time-regular
			font-family Regular
			font-size 14px
			color $font-dark-blue
	.game-score
		font-family Black
		font-size 22px
		color $font-dark-blue
.game-history
	.game-info p:last-child
		font-size 20px

.random-stats, .profile-stats, .overlay
	h4, p
		text-align center
	h4
		font-family Medium
		font-size 14px
		text-transform uppercase
		color $font-dark-blue
	p
		font-size 34px
		font-family Bold
		span
			font-family Black
	.streak p, .streak h4
		text-align left
	.win-streak p
		color $font-dark-blue
		span
			color $accent-red
	.losing-streak p
		color $font-dark-blue
		span
			color $accent-grey
	.sweeping-score p
		font-size 50px
		color $accent-grey
		font-family Regular
		&.score
			font-family Black
		.winner-score, .winner-name
			color $accent-red
	.total-games
		font-size 60px
		font-family Black
		color $font-dark-blue
		
.profile-stats, .overlay
	text-align center
	.name
		font-family Bold
		font-size 24px
	.player-since
		font-family Regular
		font-size 16px
	.player-rank
		font-family Regular
		font-size 20px
		color $accent-red
	.block
		&.top
			.number
				line-height 0.8
				height 45px
		.number
			font-family Medium
			font-size 51px
			height 55px
			&.small
				font-size 45px
		.bottom-text
			font-family Medium
			font-size 12.3px
	.win-streak p, .losing-streak p, h4
		color $white
.weekly-stats
	text-align center
	font-family Medium
	color $font-dark-blue
	.stat-number
		font-size 51.4px
		height 55px
	.stat-title
		font-size 13px
		
.player-stats
	color $font-dark-blue
	h2
		text-align left
		font-family Medium
		font-size 28px

	form label
		font-family Bold
		font-size 16px
	table
		border solid 1px $white
		thead th
			font-family Medium
			font-size 14px
		tr
			td
				font-family Regular
				font-size 18px
				&:first-child, &:nth-child(5)
					font-family Bold
.game-history
	.header
		h2
			text-align left
			font-family Medium
			font-size 28px
			color $font-dark-blue

	.game
		.winner
			color $accent-red
		.loser
			color $accent-grey
		.date
			font-family Regular
			font-size 16px
			color $font-dark-blue

		.player-name
			font-family Bold
			font-size 18px
		.player-score
			font-family Black
			font-size 28px

.input-score
	h3
		text-align center
		font-family Bold
		font-size  26px
	.submit-score
		font-family Medium
		font-size 23px