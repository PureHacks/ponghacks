.top-nav
	.tv-nav
		.img-holder
			margin 0 auto
			width 255px
			height 75px
			padding-top 20px

	background-color $nav-bg-blue
	.logo
		h1
			text-indent -9999px
			display block
			background url("/assets/img/ponghacks-logo.png") no-repeat
	.row
		margin 0 auto
		height 75px
		ul
			margin 0
			padding 0
			list-style-type none
			li
				.nav-link
					width 100%
					height 100%
					display block
					padding-top 28%

				position relative
				padding 0
				height 75px
				display inline-block
				border-left 1px solid $nav-font
				&:last-child
					border-right 1px solid $nav-font
				text-align center
				transition 0.5s ease
				&:hover, &.active
					background-color white
					a
						color $font-dark-blue
					svg
						path, rect, circle, line
							fill $font-dark-blue
							stroke $font-dark-blue
				a
					color $white
				svg
					position absolute
					pointer-events none
					path, rect, circle, line
						fill $nav-font
				.dashboard
					svg
						top -103px
						left -69px
						width 350px
						height 350px

				.game-history
					svg
						transform rotate(-53deg)
						width 125px
						height 125px
						top -17px
						left 13px

				.player-stats
					svg
						top -96px
						left -8px
						width 250px
						height 250px
						circle
							stroke $nav-font

				.add-game
					svg
						width 225px
						height 225px
						top -85px
						left -30px
						line
							stroke $nav-font