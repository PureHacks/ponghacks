.input-score
	margin 0 auto
	color $font-dark-blue
	.container
		background-color $section-bg-white
		float none
		margin 15% auto
		h3
			padding 50px 0
		
		form
			input, select
				width 100%
				font-family Medium
				height 55px
				border none
				outline none
				background-color $white
			&.ng-pristine, &.ng-invalid
				.submit-score
					background-color rgb(192, 192, 192)
		
		.select-container
			margin-bottom 38px
			position relative
			select
				font-size 21px
				text-indent 60px
				
			img
				position absolute
				display block
				width 40px
				height 40px
				top 7px
				left 7px
				border-radius 50%
				
		.point-input-container
			position relative
			margin-bottom 55px
			input
				font-size 25px
				text-indent 155px

		.winner
			.select-container, .point-input-container
				float right
				
		.submit-score
			width 100%
			height 55px
			display block
			border none
			color $font-dark-blue
			background-color $accent-red
			color $white
			&.disabled
				background-color rgb(192, 192, 192)
				
			