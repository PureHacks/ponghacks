
.player-stats
	margin 0 auto
	
	form
		label
			position relative
			padding 5px 20px
			input[type=radio] 
				position absolute
				right 0
				top 0
	
	.all-stats
		margin-top 20px
		margin-bottom 20px
		table
			background-color $white
			width 100%
			height 600px
			
			.name
				width  26.5%
			.games
				width 	12.5%
			.wins
				width 	9.5%
			.losses
				width 	9.5%
			.win-rate
				width 	16%
			.rank
				width 	12%
			.compare-check
				width 	14%
				
				
			thead
				background-color $header-bg-grey
				th
					padding 10px 10px 8px 15px
					text-align center
					&:first-child
						text-align left
			tr
				&:last-child td
					border-bottom none
				td
					padding 10px 10px 9px 15px
					border-bottom 1px solid $header-bg-grey
					text-align center
					&:first-child
						text-align left
					
					img 
						display block
						border-radius 50%
					span
						display block
						vertical-align middle
			