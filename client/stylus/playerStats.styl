
.player-stats
	margin 0 auto
	
	.top-row
		height 93px
		padding 26px 0
		form
			label
				display block
				padding 13px 12px
				position relative
				height 45px
				border 1px solid $font-dark-blue
				input[type=radio]
					position absolute
					right 14px
					top 14px
		
	.all-stats
		margin-bottom 20px
		table
			background-color $white
			width 100%
			height 600px
			
			.name
				width 	26.5%
			.games
				width 	12.5%
			.wins
				width 	9.5%
			.losses
				width 	9.5%
			.win-rate
				width 	16%
			.rank
				width 	12%
			.compare-check
				width 	14%
				
				
			thead
				background-color $header-bg-grey
				th
					padding 10px 10px 8px 15px
					text-align center
					&:first-child
						text-align left

					.tablesort-sortable
						-webkit-user-select none
					    -khtml-user-select none
					    -moz-user-select none
					    -o-user-select none
					    user-select none
					    cursor pointer
			tr
				&:last-child td
					border-bottom none
				td
					padding 10px 10px 9px 15px
					border-bottom 1px solid $header-bg-grey
					text-align center
					&:first-child
						text-align left
					
					img 
						display block
						border-radius 50%
					span
						display block
						vertical-align middle

	.profile-img-name
		img 
			width 55px
			float left
		span
			padding-top: 20px 
			padding-left 75px


	.showIfLast 
		display none

	.showIfLast:last-child
		display table-row

	.showIfLast td 
		text-align center

	.showIfLast td:after
		content "No data"