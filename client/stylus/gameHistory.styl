.game-history

	margin 0 auto	
		ul li
			border-bottom 1px solid $header-bg-grey
			.recent-game
				height inherit
				.game-info, .game-score
					float left
					padding 0
				.game-info
					width 80%
					.winner-name
						color $accent-red
					.loser-name
						color $font-dark-blue
				.game-score
					width 20%
					span
						font-size 22px
						color $font-dark-blue