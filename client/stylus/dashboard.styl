.dashboard
	width 100%
	margin 0 auto
	
	.most-recent-game
		margin-top 20px
		height 200px
		padding 20px 0
		background url("/assets/img/dashboard-bg.png") no-repeat center top
		background-size cover
		color $white
		section
			float none
			margin 0 auto
			.time-score
				.time-regular
					margin 10px 0 20px 0
				.score-large
					span
						color $accent-red
			img 
				border solid 5px $white
				width 125px
				height 125px
				border-radius 50%
			.winner
				img
					border-color $accent-red
				color $accent-red
				.star
					width 25px
					height 24px
					background url("/assets/img/star.png")
					display inline-block
			.winner, .time-score, .loser
				float left
				text-align center
			.winner, .loser
				width 30%
			.time-score
				width 40%
	.dashboard-breakdown
		section
			border 1px solid $white
			background-color $white
			.section-header
				
				h3 
					position relative
					.arrow
						color $accent-red
						position absolute
						right 5px
						top 0
						background url("/assets/img/arrow-right.png")
						width: 19px
						height: 15px

		.left-column, .right-column
			margin-top 20px
			
		.elo-ranking, .recent-games
			height 270px
		
		.weekly-standings
			height 190px
			
		.random-stats
			height 480px
			.stat
				height 100px
				padding-top 25px
				border-bottom 1px solid $header-bg-grey
				&.total-games-played
					border-bottom none
			.streak
				.streak-left,
				.streak-right
					float: left
				.streak-left
					width 25%
					.arrow
						margin 0 auto
						width 54px
						height 54px
						display block
				.streak-right
					width 75%
					padding-left 7.5px
				&.win-streak .arrow
					background-image url("/assets/img/arrow-up.png")	
				&.losing-streak .arrow
					background-image url("/assets/img/arrow-down.png")
			.sweeping-score
				padding-top 20px
				height 145px
				p
					&.players
						font-size 22px
			.total-games-played
				padding-top 10px
		.elo-ranking
			ol
				counter-reset:li
				li
					position relative
					height 47px
					padding 12px 0 0 80px
					list-style none
					border-bottom 1px solid $header-bg-grey
					&:before
						position absolute
						top 11px
						left 20px
						content counter(li)
						counter-increment:li
						font-size 22px
					&:last-child
						border-bottom none
					.star
						position absolute
						top 10px
						right 20px
						width 25px
						height 24px
						background url("/assets/img/star.png")
		.recent-games
			ul li
				border-bottom 1px solid $header-bg-grey
				&:last-child
					border-bottom none
				.recent-game
					height 58px
					padding 15px 10px 15px 15px
					.game-info, .game-score
						float left
					.game-info
						width 81%
					.game-score
						width 19%
		.weekly-standings
			margin-top 20px
			margin-bottom 50px
			table
				width 100%
				thead
					th
						padding 10px 10px 8px 15px
				tr
					&:last-child td
						border-bottom none
					td
						height 38.75px
						border-bottom 1px solid $header-bg-grey
						&:first-child
							padding-left 15px
				